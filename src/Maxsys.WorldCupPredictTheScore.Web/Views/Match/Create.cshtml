@model Maxsys.WorldCupPredictTheScore.Web.ViewModels.Match.MatchCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MatchCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedHomeTeamId" class="control-label"></label>
                <select asp-for="SelectedHomeTeamId" class="form-control">
                    <option value="" selected disabled required>Selecione um Time</option>
                    @foreach (var item in Model.Teams)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SelectedHomeTeamId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedAwayTeamId" class="control-label"></label>
                <select asp-for="SelectedAwayTeamId" class="form-control">
                    <option value="" selected disabled required>Selecione um Time</option>
                    @foreach (var item in Model.Teams)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SelectedAwayTeamId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Group" class="control-label"></label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="SelectedRound" class="control-label"></label>
                <select asp-for="SelectedRound" class="form-control">
                    <option value="" selected disabled required>Selecione uma rodada</option>
                    @foreach (var item in Model.Rounds)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
                <span asp-validation-for="SelectedRound" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
